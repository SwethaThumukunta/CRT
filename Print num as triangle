#include <stdio.h>

int main() {
    int i,j,k,n;
    scanf("%d",&n);
    {
        for(j=1;j<=n;j++)
        {
            for(k=i;k<=n-1;k++)
            printf(" ");
            for(i=1;i<=j;i++)
            printf("* ");
            printf("\n");
        }
         for(j=n-1;j>=1;j--)
        {
            for(k=j;k<=n-1;k++)
            printf(" ");
            for(i=1;i<=j;i++)
            printf("* ");
            printf("\n");
        }
    }

    return 0;
}
