
////Local variables:////

#include <stdio.h>
void show()
{
    int a=10;
    printf("show a=%d\n",a);
}
void display()
{
    int a=20;
    printf("display a=%d",a);
}
 int main()
 {
     show();
     display();
 }



///Global variable:///

#include <stdio.h>
int a=100;
void show()
{
    printf("show a=%d\n",a);
}
void display()
{
    printf("display a=%d\n",a);
}
 int main()
 {
     show();
     display();
     printf("main a=%d\n",a);
 }
