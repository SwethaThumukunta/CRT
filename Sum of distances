#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int n;
    scanf("%d",&n);
    int a[n],i;
    int sum=0;
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    for(i=0;i<n-1;i++)
    {
        if(a[i]>a[i+1])
        {
           sum+=a[i]-a[i+1];
        }
           else {
         sum+=a[i+1]-a[i];
           }
    }
    
    printf("%d",sum);
    return 0;
}
